// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mysql"
  url      = env("DATABASE_URL")
}

model Ticket {
  ticketId BigInt @id @default(autoincrement())
  ticketName String
  ticketDescription String

  clientId BigInt
  state Boolean

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}


model Task {
  taskId Int @id @default(autoincrement())
  taskDescription String

  engineerId Int
  state Boolean

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}


model Company {
    companyId BigInt @id @default(autoincrement())
    companyName String
}
model PendingToClient{
    taskId BigInt @id
}
model PendingToEngineer {
    ticketId BigInt @id
}
model User {
      userid BigInt @id @default(autoincrement())
      companyId BigInt
      firstName String
      lastName String
      userName String
      password String
      email String
      profileImageUrl String

      createdAt DateTime @default(now())
}

